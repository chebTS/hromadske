<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/btns_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                layout="@layout/working_time"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
    
    <LinearLayout 
        android:id="@+id/container_sorry"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        
	    <TextView 
	        android:padding="10dp"
	        android:id="@+id/txt_sorry"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/sorry"/>
	    
	    <ImageView 
	        android:id="@+id/btn_youtube_sorry"
	        android:layout_gravity="center"
	        android:background="@drawable/youtube"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_transparent_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>